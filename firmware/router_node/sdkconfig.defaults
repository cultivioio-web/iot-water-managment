# Cultivio AquaSense - Router Node SDK Configuration

# Zigbee configuration
CONFIG_ZB_ENABLED=y
CONFIG_ZB_ZCZR=y

# Router role for mesh networking
CONFIG_ESP_ZIGBEE_COORDINATOR_ONLY=n

# IEEE 802.15.4 Radio
CONFIG_IEEE802154_ENABLED=y

# Partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Log level
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

